@model IEnumerable<ESA_AuthenicationB2CApi.Models.Todo>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<div class="btn-group btn-group-sm">
  <button type="button" class="btn btn-primary">Operations</button>
  <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" role="menu">
    <li><a class="nav-link text-dark" asp-area="" asp-controller="TodoList" asp-action="Create">Create New</a></li>
    <li><a class="nav-link text-dark" asp-area="" asp-controller="TodoList" asp-action="GetAll">See All</a></li>
    <li><a class="nav-link text-dark" asp-area="" asp-controller="TodoList" asp-action="Index">See Only Me</a></li>
  </ul>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Owner)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Owner)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
